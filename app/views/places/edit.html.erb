<h1>Ret oplysninger for spillested</h1>

<% form_for(@place) do |f| %>
  <%= f.error_messages %>

<div class="placeform">
  <div>
    <%= f.label :name, "Navn" %><br />
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label :description, "Beskrivelse" %><br />
    <%= f.text_area :description %>
  </div>
</div>
<div class="placeformcontact">
  <div>
    <%= f.label :street_address, "Adresse" %><br />
    <%= f.text_field :street_address %>
  </div>
  <div>
    <%= f.label :extended_address, "Adresse" %><br />
    <%= f.text_field :extended_address %>
  </div>
  <div>
    <%= f.label :zip, "Postnr." %><br />
    <%= f.text_field :zip %>
  </div>
  <div>
    <%= f.label :city, "By" %><br />
    <%= f.text_field :city %>
  </div>
  <div>
    <%= f.label :phone, "Telefon" %><br />
    <%= f.text_field :phone %>
  </div>
  <div>
    <%= f.label :email, "Email" %><br />
    <%= f.text_field :email %>
  </div>
  <div>
    <%= f.label :web_address, "Web adresse" %><br />
    <%= f.text_field :web_address %>
  </div>
</div>
<div class="placeformtech">
  <div>
    <%= f.label :pa_system, "PA system" %><br />
    <%= f.text_field :pa_system %>
  </div>
  <div>
    <%= f.label :mixer, "Mixer" %><br />
    <%= f.text_field :mixer %>
  </div>
  <div>
    <%= f.label :monitor_system, "Monitor system" %><br />
    <%= f.text_field :monitor_system %>
  </div>
  <div>
    <%= f.label :monitor_mixer, "Monitor mixer" %><br />
    <%= f.text_field :monitor_mixer %>
  </div>
  <div>
    <%= f.label :outboard, "Outboard" %><br />
    <%= f.text_area :outboard %>
  </div>
</div>
<div class="formsubmit">
    <span><%= f.submit "Opdater" %></span>
	<span class="formcancel"><%= link_to "Annuller", @place%></span>
</div>

<% end %>