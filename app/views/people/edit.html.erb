<% title "Ret personlige oplysninger" %>

<h1>Ret personlige oplysninger</h1>

<% form_for(@person) do |f| %>
  <%= f.error_messages %>

<div class="form">
  <div class="formfield">
    <%= f.label :name, "Navn" %>
    <%= f.text_field :name %>
  </div>
  <div class="formfield">
    <%= f.label :email, "Email" %>
    <%= f.text_field :email %>
  </div>
  <div class="formfield">
    <%= f.label :phone, "Telefon" %>
    <%= f.text_field :phone %>
  </div>
</div>
  <div class="formsubmit">
    <span><%= f.submit "Opdater" %></span>
	  <span class="formcancel"><%= link_to "Annuller", @person %></span>
  </div>


<% end %>