<h1>Change password</h1>

<%= error_messages_for :person %>
<%= content_tag 'div', h(flash[:notice]), :class => 'notice', :id => 'notice' if flash[:notice] %>
<%= content_tag 'div', h(flash[:error]), :class => 'notice error', :id => 'error' if flash[:error] %>

<% form_tag(change_password_path) do %>
<div class="block">
  <%= label_tag :new_password, "Nyt Password" %>
  <%= password_field_tag :new_password %>
</div>

<div class="block">
  <%= label_tag :new_password_confirmation, "Nyt Password (igen)" %>
  <%= password_field_tag :new_password_confirmation %>
</div>

<ul class="button-panel">
  <li class="first"><%= submit_tag "Skift password" %></li>
  <li><%= link_to 'Tilbage', edit_person_path(@person) %></li>
</ul>
<% end %>
