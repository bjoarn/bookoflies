<h1>New person</h1>

<% form_for(@person) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :phone %><br />
    <%= f.text_field :phone %>
  </p>
  <div class="block">
    <%= f.label :new_password, "Password" %>
    <%= f.password_field :new_password %>
  </div>

  <div class="block">
    <%= f.label :new_password_confirmation, "Password (igen)" %>
    <%= f.password_field :new_password_confirmation %>
  </div>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', people_path %>
